{
  "name": "coopart-frontend",
  "version": "1.0.0",
  "scripts": {
    "start": "PORT=3000 NODE_ENV=development REACT_APP_BACKEND_URL=http://localhost:8080 react-scripts -r @cypress/instrument-cra start && open http://localhost:3000",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "docker-create": "doctl k8s cluster create --region fra1 --node-pool \"name=coopart-frontend;size=s-1vcpu-2gb;count=1;auto-scale=true;min-nodes=1;max-nodes=3\" coopart-frontend --wait && doctl kubernetes cluster kubeconfig save coopart-frontend",
    "docker-build": "yarn build && docker build -t rtx/coopart-frontend . --no-cache",
    "docker-run": "docker run --rm -it -p 80:80 rtx/coopart-frontend",
    "docker-push": "doctl registry login && docker tag rtx/coopart-frontend registry.digitalocean.com/rtx/coopart-frontend && docker push registry.digitalocean.com/rtx/coopart-frontend",
    "docker-patch": "doctl registry kubernetes-manifest | kubectl --context do-fra1-coopart-frontend apply -f - && kubectl --context do-fra1-coopart-frontend patch serviceaccount default -p '{\"imagePullSecrets\": [{\"name\": \"registry-rtx\"}]}'",
    "docker-secrets": "kubectl --context do-fra1-coopart-frontend create secret generic person --from-env-file=.env",
    "docker-deploy": "kubectl --context do-fra1-coopart-frontend apply -f kubernetesDeployment.json",
    "docker-serve": "kubectl --context do-fra1-coopart-frontend apply -f kubernetesService.json",
    "docker-restart": "kubectl --context do-fra1-coopart-frontend delete pods -l app=coopart-frontend",
    "docker-logs": "kubectl --context do-fra1-coopart-frontend logs --timestamps -l app=coopart-frontend",
    "docker-update": "yarn run docker-build && yarn run docker-push && yarn run docker-restart",
    "docker-install": "yarn run docker-build && yarn run docker-push && yarn run docker-patch && yarn run docker-deploy && yarn run docker-serve",
    "analyze": "react-scripts build && source-map-explorer 'build/static/js/*.js'",
    "cypress:open": "cypress open",
    "cypress:run": "cypress run",
    "cypress:test": "cypress run -s 'cypress/integration/**/*-spec.js'",
    "import-shared": "rm -Rf src/shared && cp -R ../api/src/shared src/shared"
  },
  "dependencies": {
    "@apollo/client": "^3.4.7",
    "@openzeppelin/contracts": "^4.2.0",
    "axios": "^0.21.1",
    "class-transformer": "^0.3.2",
    "class-validator": "^0.13.1",
    "connected-react-router": "^6.8.0",
    "constate": "^3.1.0",
    "dayjs": "^1.10.6",
    "graphql": "^15.5.1",
    "history": "^5.0.0",
    "ipfs-http-client": "^51.0.1",
    "jwt-decode": "^3.1.2",
    "konva": "^8.1.3",
    "markdown-to-jsx": "^7.1.1",
    "nft.storage": "^3.1.3",
    "rc-slider": "^9.7.1",
    "react": "^17.0.1",
    "react-alert": "^7.0.2",
    "react-alert-template-basic": "^1.0.0",
    "react-dom": "^17.0.1",
    "react-google-recaptcha-v3": "^1.7.1",
    "react-helmet": "^6.1.0",
    "react-konva": "^17.0.2-5",
    "react-motion": "^0.5.2",
    "react-promise-suspense": "^0.3.3",
    "react-redux": "^7.2.2",
    "react-router": "^5.2.0",
    "react-router-dom": "^5.2.0",
    "react-router-transition": "^2.0.0",
    "react-scripts": "^4.0.1",
    "react-tooltip": "^4.2.15",
